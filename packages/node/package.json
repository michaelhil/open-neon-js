{
  "name": "@open-neon/node",
  "version": "0.1.0-beta.1",
  "type": "module",
  "description": "Node.js implementation for Pupil Labs Neon eye tracker with full network capabilities",
  "main": "./dist/index.js",
  "module": "./dist/index.js", 
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@open-neon/core": "workspace:*",
    "ws": "^8.16.0",
    "node-fetch": "^3.3.2",
    "bonjour-service": "^1.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "vite": "^5.0.11",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}