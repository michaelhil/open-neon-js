{
  "name": "open-neon-js",
  "version": "0.1.0-beta.4",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun run --filter '*' test",
    "test:integration": "node scripts/test-with-mock.js test",
    "test:demo": "node scripts/test-with-mock.js demo",
    "test:all": "node scripts/test-with-mock.js both",
    "mock-server": "node test-utils/mock-server.js",
    "lint": "eslint packages/*/src",
    "format": "prettier --write packages/*/src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist",
    "clean:all": "rm -rf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}